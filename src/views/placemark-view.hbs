{{> menu active="dashboard"}}

<section class="section columns is-vcentered">
  <div class="column has-text-centered">
  <div class="title">
    {{placemark.name}}
  </div>
  <div>
    <h3 class="is-size-2">
        Category: {{placemark.category}}
    </h3>
  </div>
  {{#if list}}
  {{> list-sites}}
  {{else}}
  <div class="box content">
    <p>You have no historic sites listed yet.. </p>
  </div>
  {{/if}}
  {{> add-site}}
  </div>
<div class="column">
  {{> placemark-image}}
</div>
</section>