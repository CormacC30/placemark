<div class="card">
  <div class="card-image">
    <figure class="image is-centered is-128x128">
      <img src={{this.img}}>
    </figure>
  </div>
  <div class="card-content">
    <form action="/placemark/{{placemarkid}}/site/{{_id}}/uploadimage" method="POST" enctype="multipart/form-data">
        <!-- Hidden input field to include the site ID -->
    <input type="hidden" name="siteId" value="{{this._id}}">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
           </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-warning">Upload</button>
      </div>
    </form>
  </div>
</div>
<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>